{
  "ConnectionStrings": {
    "HotelListingDbConnectionString": "Server=localhost\\mssqllocaldb;Database=HotelListDb;Trusted_Connection=True;MultipleActiveResultSets=True"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localHost:5341"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
